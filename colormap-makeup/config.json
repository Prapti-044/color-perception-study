      "type": "questionnaire",
      "response": [
        {
          "id": "name",
          "prompt": "What is your first name?",
          "required": true,
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Please enter your name"
        },
        {
          "id": "color-deficiency",
          "prompt": "Do you have any color vision deficiency?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": ["Yes", "No"]
        }
      ]
    },
